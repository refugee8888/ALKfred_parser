{
  "name": "ALKfred Dev",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/app",
  "remoteUser": "appuser",

  "containerEnv": {
    "PYTHONPATH": "/app/src"
  },

  "mounts": [
    "source=${localWorkspaceFolder}/data,target=/app/data,type=bind",
    "source=${localWorkspaceFolder}/src/.env,target=/app/.env,type=bind,readonly"
  ],

  "customizations": {
    "vscode": {
      "settings": {
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false,
        "python.analysis.extraPaths": ["/app/src"],
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },

  "postCreateCommand": "python --version"
}
